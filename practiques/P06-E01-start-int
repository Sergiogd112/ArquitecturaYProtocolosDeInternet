#!/bin/bash
num_routers=13
folder=P06/P06-E01

02-copy-files $num_routers /home/api/practiques/$folder/config_files_zebra_$(printf "PC%d" 1) o6
02-copy-files $num_routers /home/api/practiques/$folder/config_files_zebra_$(printf "PC%d" 1) o
02-copy-files $num_routers /home/api/practiques/$folder/config_files_zebra_$(printf "PC%d" 1) r6

sysctl -w fs.inotify.max_user_instances=1024

lxc-attach -n R01 -- systemctl start ospf6d
echo Starting ospf6d in R01 .............
lxc-attach -n R02 -- systemctl start ospf6d
echo Starting ospf6d in R02 .............
lxc-attach -n R03 -- systemctl start ospf6d
echo Starting ospf6d in R03 .............
lxc-attach -n R04 -- systemctl start ospf6d
echo Starting ospf6d in R04 .............
lxc-attach -n R05 -- systemctl start ospf6d
echo Starting ospf6d in R05 .............
lxc-attach -n R06 -- systemctl start ospf6d
echo Starting ospf6d in R06 .............
lxc-attach -n R07 -- systemctl start ospf6d
echo Starting ospf6d in R07 .............
lxc-attach -n R08 -- systemctl start ospf6d
echo Starting ospf6d in R08 .............
lxc-attach -n R09 -- systemctl start ospf6d
echo Starting ospf6d in R09 .............
lxc-attach -n R10 -- systemctl start ospf6d
echo Starting ospf6d in R10 .............
lxc-attach -n R12 -- systemctl start ospf6d
echo Starting ospf6d in R12 .............
lxc-attach -n R13 -- systemctl start ospf6d
echo Starting ospf6d in R13 .............
lxc-attach -n R01 -- systemctl start ospfd
echo Starting ospfd in R01 .............
lxc-attach -n R03 -- systemctl start ospfd
echo Starting ospfd in R03 .............
lxc-attach -n R05 -- systemctl start ospfd
echo Starting ospfd in R05 .............
lxc-attach -n R07 -- systemctl start ospfd
echo Starting ospfd in R07 .............
lxc-attach -n R09 -- systemctl start ospfd
echo Starting ospfd in R09 .............
lxc-attach -n R11 -- systemctl start ospfd
echo Starting ospfd in R11 .............
echo "Done!"

